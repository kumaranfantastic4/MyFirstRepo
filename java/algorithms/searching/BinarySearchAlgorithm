
import java.util.Scanner;

/**
 * Binary Search Algorithm
 * @author Kumaran, email<kumaranvoyant@gmail.com>
 * asymptotic notation 
 * c.log2(n) operations
 * output example 
 * Enter number of elements
 * 5
 * Enter 5 integers
 * 11
 * 44
 * 22
 * 33
 * 66
 * Enter value to find
 * 66
 * 66 pointed location : 5
 */
public class BinarySearchAlgorithm {

	/**
	 * main method 
	 * @param args
	 */
	public static void main(String[] args) {

		int  count, total, search, array[]; 
		Scanner in = new Scanner(System.in);
		System.out.println("Enter number of elements");
		total = in.nextInt(); 
		array = new int[total];

		System.out.println("Enter " + total + " integers");

		for (count = 0; count < total; count++)
			array[count] = in.nextInt();

		System.out.println("Enter value to find");
		search = in.nextInt();
		int first = 0;
		int last = total-1;
		int middle = ( first + last ) / 2;
		while( first <= last ){

			if( array[middle] < search ){
				first = middle + 1;
			} else if( array[middle] == search) {
				System.out.println( search + " pointed location : " + ( middle + 1 ) );
				break;
			}
			else{
				last = middle - 1;
			}
			middle = ( first + last )/2 ;
		}
		if( first > last ){
			System.out.println( search + "not available in any location ");
		}
	}

}

